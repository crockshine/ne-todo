// создает клиенское апи
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String

  tasksId Task[]
  tagsId  Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id       String    @id @default(uuid())
  title    String
  deadline DateTime?
  tags     Tag[]

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) // у каждой задачи - один юзер
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id    String @id @default(uuid())
  value String @unique

  tasks Task[]

  color EColor

  user   User   @relation(fields: [userId], references: [id]) // у каждого тега - один юзер
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EColor {
  RED
  BLUE
  GREEN
  ORANGE
  PINK
}
